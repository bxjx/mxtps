<h1 class="theme"><%= mixtape.theme %></h1>

<div id="contributions" class="full">
  <% if (!mixtape.contributions.length){ %>
    No contributions yet. We'll update the page if someone adds a song.
  <% } %>
  <ol>
    <% $.each(mixtape.contributions, function(index, contribution){ %>
      <li>
        <span><%=contribution.title + " by " + contribution.artist%></span>
        <p><%=contribution.comments%> &mdash; contribution.user.name</p>
      </li>
    <% }) %>
  </ol>
</div>

<button id="play-mixtape">Play mixtape</button>
<% if (!mixtape.closed){ %>
<a class="button" href="#/mixtapes/<%=mixtape._id%>/contributions/new">Suggest a song</a>
<% }else{ %>
<span>This has reached 10 songs and is now closed!</span>
<% } %>
